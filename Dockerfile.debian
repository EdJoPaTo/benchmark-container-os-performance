FROM docker.io/library/debian:trixie-slim
RUN apt-get update \
	&& apt-get upgrade -y \
	&& apt-get install -y bash build-essential curl ffmpeg git hyperfine rustup wget \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/* /var/cache/* /var/log/*

RUN git config --global advice.detachedHead false

WORKDIR /app
COPY . ./
RUN ./clone.sh

CMD ["/app/bench.sh"]
