FROM docker.io/library/rust:1.77-bookworm
RUN apt-get update \
	&& apt-get upgrade -y \
	&& apt-get install -y bash ffmpeg git hyperfine wget \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/* /var/cache/* /var/log/*

RUN git config --global advice.detachedHead false

WORKDIR /app
COPY . ./
RUN ./clone.sh

CMD ["/app/bench.sh"]
